<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/semc_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            style="@style/BaseText.About"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:text="Bionx Open Source Project/License" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="All Rights Reserved"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="(C) 2013, Nx Industries (BOSP)" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Copyright 2012, The Android Open Source Project" />
                
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Copyright (C) 2012, The CyanogenMod Project" />
                
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Copyright 2012, Android Open Kang Project" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Copyright (C) 2012 James Roberts" />
                
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Copyright 2011 Luca Santarelli" />
                
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Copyright (C) 2011  Joe Berria" />
                
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Copyright 2012  Clark Scheff" />
                
                <TextView android:id="@+id/textView3"
                          android:layout_width="fill_parent"
                          android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Copyright 2010 Liberty JRummy16"/>
                
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="License Agreements"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="http://www.apache.org/licenses/LICENSE-2.0" />
                
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="http://www.gnu.org/licenses/gpl-2.0.txt" />
                
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Lib References"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="RootTools Project: http://code.google.com/p/roottools/" />
                <TextView 
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="Android4Basic: http://www.basic4ppc.com/android/wiki/index.php/Libraries"/>
                
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Source"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Github Source Updated with Google Play Updates!" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bionx_sig" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>