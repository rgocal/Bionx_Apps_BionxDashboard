<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/storage_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/bottom_bar"
        android:gravity="fill_horizontal"
        android:scrollbars="none" >

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/back"
            android:padding="6dp" />

        <ImageButton
            android:id="@+id/multiselect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/home_button"
            android:background="@drawable/setting"
            android:padding="6dp" />

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/multiselect_button"
            android:background="@drawable/home"
            android:padding="6dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/path_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/black"
        android:maxLines="1"
        android:text="path is"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/detail_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/black"
        android:gravity="center"
        android:textColor="@color/brightRed" />

    <ListView
        android:id="@+id/android:list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:drawSelectorOnTop="true"
        android:longClickable="true"
        android:smoothScrollbar="true" />

    <!-- Footer for Multi-select buttons -->

    <LinearLayout
        android:id="@+id/hidden_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/hidden_attach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Attach" />

        <Button
            android:id="@+id/hidden_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete" />

        <Button
            android:id="@+id/hidden_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Copy" />

        <Button
            android:id="@+id/hidden_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Move" />
    </LinearLayout>

</LinearLayout>
